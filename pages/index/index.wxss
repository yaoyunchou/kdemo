/*---------------模拟电信app的效果---------------------  */
.user-center{
  overflow: hidden;
  height:45vh;
  position: relative;

  background: pink;
}
.user-bg{
  width:100%;
  position: absolute;
  top:0;
  text-align: center;
}
.user-bg image{
  transform: scale(1.5);
}
.turntable{
  width:400rpx;
  height:400rpx;
  margin:50rpx auto 50rpx;
  position: relative;
  font-size:12px;
}
.turntable .indicator{
  opacity: 0.95;
  position: absolute;
  width:200rpx;
  height:200rpx;
  border-radius: 150rpx;
  background: #f7833a;
  margin-left:-100rpx;
  margin-top:-100rpx;
  top:50%;
  left:50%;
}

.turntable .sector:first-child {
	transform: rotate(-44deg) skew(2deg);
}

.turntable .sector:nth-child(2) {
	transform: rotate(46deg) skew(2deg);
}

.turntable .sector:nth-child(3) {
	transform: rotate(136deg) skew(2deg);
}

.turntable .sector:nth-child(4) {
	transform: rotate(226deg) skew(2deg);
}
.turntable .sector{
  
position: absolute;
	top: 50%;
	left: 50%;
	overflow: hidden;
	margin-left: -200rpx;
	margin-top: -200rpx;
	width: 200rpx;
	height: 200rpx;
	font-size: 1.5em;
	-webkit-transition: all .3s ease;
	-moz-transition: all .3s ease;
	transition: all .3s ease;
	-webkit-transform: rotate(76deg) skew(60deg);
	-moz-transform: rotate(76deg) skew(60deg);
	-ms-transform: rotate(76deg) skew(60deg);
	transform: rotate(76deg) skew(60deg);
	-webkit-transform-origin: 100% 100%;
	-moz-transform-origin: 100% 100%;
	transform-origin: 100% 100%;
	pointer-events: none;

}

.turntable .sector-in{
  opacity: 0.6;
  position: absolute;
	display: block;
	width: 400rpx;
	height: 400rpx;
	border-radius: 50%;
	background: radial-gradient(transparent 30%, #e6d4c6  40%);
  transform: skew(0) rotate(-45deg) scale(1);
	color: #fff;
	text-align: center;
	text-decoration: none;
	line-height: 3;
  font-size:24rpx;
	-webkit-backface-visibility: hidden;
	backface-visibility: hidden;
	pointer-events: auto;
}
.on .sector-in{
      background: radial-gradient(transparent 30%,#ede4dd  40%);
}
.turntable  .text{
  display: block;
  position: absolute;
  text-align: center;
  line-height: 40rpx;

}
